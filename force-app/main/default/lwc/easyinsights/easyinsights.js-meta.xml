<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="easyinsights">
    <apiVersion>46.0</apiVersion>
    <isExposed>true</isExposed>

  <targets>
    <target>lightning__AppPage</target>
    <target>lightning__RecordPage</target>
    <target>lightning__HomePage</target>
    <target>lightningCommunity__Default</target>   
  </targets>

<!-- Configuring the design attributes -->
      <targetConfigs>
        <targetConfig targets="lightning__RecordPage, lightningCommunity__Default, lightning__AppPage, lightning__HomePage">

            <property name="title" type="String" default="Insights" label="Title"/>
            <property name="icon" type="String" default="standard:goals" label="Icon"/>

            <property name="metric1_title" type="String" default="CSAT" label="Metric 1 title"/>
            <property name="metric1_value" type="String" default="95 / 100" label="Metric 1 value"/>
            <property name="metric1_cb" type="Boolean" default="true" label="Use value from eivalue1__c field"/>

            <property name="metric2_title" type="String" default="Avg. basket" label="Metric 2 title"/>
            <property name="metric2_value" type="String" default="325 $" label="Metric 2 value"/>
            <property name="metric2_cb" type="Boolean" default="true" label="Use value from eivalue2__c field"/>

            <property name="metric3_title" type="String" default="Category" label="Metric 3 title"/>
            <property name="metric3_value" type="String" default="VIP" label="Metric 3 value"/>
            <property name="metric3_cb" type="Boolean" default="true" label="Use value from eivalue3__c field"/>

            <property name="metric4_title" type="String" default="Revenue" label="Metric 4 title"/>
            <property name="metric4_value" type="String" default="2,000 $" label="Metric 4 value"/>
            <property name="metric4_cb" type="Boolean" default="true" label="Use value from eivalue4__c field"/>

          </targetConfig>
      </targetConfigs>
</LightningComponentBundle>